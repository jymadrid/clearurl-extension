{
  "name": "clearurl-extension",
  "version": "1.0.0",
  "description": "Privacy-focused browser extension that automatically removes tracking parameters from URLs to enhance user privacy",
  "main": "background.js",
  "scripts": {
    "dev": "web-ext run",
    "build": "web-ext build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "package": "web-ext build --overwrite-dest",
    "start": "web-ext run --start-url about:debugging"
  },
  "keywords": [
    "privacy",
    "security",
    "browser-extension",
    "tracking-protection",
    "url-cleaner",
    "chrome-extension",
    "privacy-tools",
    "anti-tracking",
    "web-privacy"
  ],
  "author": {
    "name": "jymadrid",
    "email": "jymadrid@protonmail.com",
    "url": "https://github.com/jymadrid/clearurl-extension"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jymadrid/clearurl-extension.git"
  },
  "bugs": {
    "url": "https://github.com/jymadrid/clearurl-extension/issues"
  },
  "homepage": "https://github.com/jymadrid/clearurl-extension#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "web-ext": "^9.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!tests/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "webextensions": true,
      "node": true
    },
    "globals": {
      "chrome": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "webExt": {
    "sourceDir": ".",
    "artifactsDir": "web-ext-artifacts",
    "ignoreFiles": [
      "node_modules",
      "tests",
      "*.md",
      "package*.json",
      ".git*",
      "web-ext-artifacts"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/jymadrid"
  }
}
